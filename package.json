{
  "name": "raviger",
  "version": "0.1.1",
  "description": "React routing with hooks",
  "main": "dist/lib.js",
  "files": [
    "dist/"
  ],
  "repository": "git@github.com:kyeotic/raviger.git",
  "author": "Tim Kye <tyrsius@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "example:build": "rollup -c example/rollup.config.js && yarn run example:build:link-react",
    "example:build:watch": "rollup -c example/rollup.config.js --watch",
    "example:build:link-react": "ln -sf $PWD/node_modules/react/umd/react.development.js example/dist/react.js && ln -sf $PWD/node_modules/react-dom/umd/react-dom.development.js example/dist/react-dom.js",
    "example:serve": "npm run example:build:link-react && http-server example/ -p 8080 --proxy http://localhost:8080?",
    "example:dev": "run-p example:build:watch example:serve"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@kyeotic/eslint-config": "^0.9.0",
    "eslint": "^5.6.0",
    "http-server": "^0.11.1",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.8",
    "react-dom": "^16.8",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-replace": "^2.2.0"
  }
}
